#!/bin/bash

# Mount cgroups
mount -t cgroup2 none /sys/fs/cgroup

# Log cgroups mount status
if mountpoint -q /sys/fs/cgroup; then
  echo "cgroups mounted successfully"
else
  echo "Failed to mount cgroups"
  exit 1
fi

# Validate cgroups mount
if ! mountpoint -q /sys/fs/cgroup; then
  echo "cgroups mount validation failed"
  exit 1
fi
