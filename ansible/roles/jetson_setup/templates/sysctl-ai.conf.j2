# Optimized sysctl settings for AI/ML workloads on Jetson
# Generated by Ansible

# Increase file descriptor limits
fs.file-max = 2097152

# Increase max number of inotify instances and watches
fs.inotify.max_user_instances = 8192
fs.inotify.max_user_watches = 524288

# Increase the maximum amount of memory a process can lock into RAM
vm.max_map_count = 262144

# Optimize virtual memory settings
vm.swappiness = 10
vm.dirty_ratio = 80
vm.dirty_background_ratio = 5

# Network optimizations for AI workloads
net.core.somaxconn = 65535
net.core.netdev_max_backlog = 4096
net.ipv4.tcp_max_syn_backlog = 4096

# TensorFlow and other ML frameworks often open many files
fs.nr_open = 5242880
