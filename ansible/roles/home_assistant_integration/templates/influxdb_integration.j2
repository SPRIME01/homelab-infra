# InfluxDB Integration Configuration
host: {{ influxdb_host }}
port: {{ influxdb_port }}
database: {{ influxdb_database }}
username: {{ influxdb_username }}
password: {{ influxdb_password }}
max_retries: 3
default_measurement: state
include:
  domains:
    - sensor
    - binary_sensor
    - switch
    - climate
    - light
exclude:
  entities:
    - sensor.last_boot
    - sensor.date
exclude:
  domains:
    - automation
    - media_player
